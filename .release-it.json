{
  "hooks": {
    "before:init": ["wp dist-archive . ./squidge/dist/squidge-${version}.zip --create-target-dir"]
  },
  "git": {
    "changelog": null,
    "commit": true,
    "commitMessage": "Release ${version}",
    "commitArgs": [],
    "tag": true,
    "tagName": null,
    "tagMatch": null,
    "tagAnnotation": "Release ${version}",
    "releaseNotes": null
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "preRelease": false,
    "assets": [
      "dist/squidge-${version}.zip"
    ]
  },
  "npm": {
    "publish": false
  }
}
